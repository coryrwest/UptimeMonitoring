@model UptimeMonitoring.Models.UserProfile

@{
    ViewBag.Title = "Start";
}

<div class="row-fluid">
    <div class="span12">

        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
    
            <fieldset>
                <legend>Please enter your email address if you wish to receive notifications</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.emailAddress)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.emailAddress)
                    @Html.ValidationMessageFor(model => model.emailAddress)
                </div>

                <p>
                    <input class="btn btn-primary" type="submit" value="Save" />
                </p>
            </fieldset>
        }
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <p>If you don't care about notifications, then @Html.ActionLink("click here", "Status")</p>
        </div>
    </div>

@Scripts.Render("~/bundles/jqueryval")