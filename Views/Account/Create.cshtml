@model UptimeMonitoring.Models.SiteModel

@{
    ViewBag.Title = "Create";
}

<div class="row-fluid">
    <div class="span12">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        <div class="row-fluid">
            <div class="span4">

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <fieldset>
                        <legend>New Website Monitor</legend>
                        @Html.ValidationSummary()

                        @Html.LabelFor(model => model.site_name)
                        @Html.TextBoxFor(model => model.site_name)

                        @Html.LabelFor(model => model.site_url)
                        @Html.TextBoxFor(model => model.site_url, new { @Value = "http://"})
                        @Html.ValidationMessageFor(model => model.site_url)

                        @Html.LabelFor(model => model.frequency)
                        @Html.TextBoxFor(model => model.frequency, new { @Value = "5" })
                        <span class="help-block">Must be between 5 and 30 minutes</span>
                        @Html.ValidationMessageFor(model => model.frequency)
                        <p>
                            <input class="btn btn-success" type="submit" value="Set Monitor" />
                        </p>
                    </fieldset>
                }
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "Status")
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
