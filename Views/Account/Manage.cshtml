@model UptimeMonitoring.Models.LocalPasswordModel
@{
    ViewBag.Title = "Manage Account";
}

<div class="row-fluid">
    <div class="span12">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<div class="row-fluid">
    <div class="span12">
        <p class="message-success">@ViewBag.StatusMessage</p>

        <div class="row-fluid">
            <div class="span6">
                @Html.Partial("_ChangePasswordPartial")
            </div>
            <div class="span6">
                @Html.Partial("_ChangeEmailPartial")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
